<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.ParentPage - @ViewBag.ChildPage</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/Content/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/Content/icheck-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/jqvmap.min.css" rel="stylesheet" />
    <link href="~/Content/adminlte.min.css" rel="stylesheet" />
    <link href="~/Content/OverlayScrollbars.min.css" rel="stylesheet" />
    <link href="~/Content/daterangepicker.css" rel="stylesheet" />
    <link href="~/Content/summernote-bs4.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/buttons.bootstrap4.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/Content/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">

                <!--full screen mode-->
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button" 
                       data-toggle="tooltip" data-placement="bottom" title="full screen mode">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>

                <!-- account Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#" >
                        <i class="fas fa-user-cog" data-toggle="tooltip" data-placement="bottom" title="account settings"></i>
                    </a>
                    <div class="dropdown-menu ">
                        <span class="dropdown-item dropdown-header">Account</span>
                        <div class="dropdown-divider"></div>
                        @*profile*@
                        <a href="@Url.Action("AccountProfile", "Page")" class="dropdown-item">
                            <i class="fas fa-user mr-2"></i> profile
                        </a>
                        <div class="dropdown-divider"></div>
                        @*change password*@
                        <a href="@Url.Action("AccountChangePassword", "Page")" class="dropdown-item">
                            <i class="fas fa-lock mr-2"></i> change password
                        </a>
                    </div>
                </li>


                <!--logout-->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Login", "Auth")" role="button" 
                       data-toggle="tooltip" data-placement="bottom" title="logout">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/Content/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Portal</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Content/AdminLTELogo.png" class="img-circle elevation-2" alt="">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Malinga Simz</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <!--dashboard-->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Dashboard")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Pages
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Datatable", "Page")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Datatables</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("AccountProfile", "Page")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Profile</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewBag.ParentPage</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">@ViewBag.ParentPage</a></li>
                                <li class="breadcrumb-item active">@ViewBag.ChildPage</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2021 Portal.</strong>
            All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-ui.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/layout/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/layout/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/layout/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/layout/responsive.bootstrap4.min.js"></script>>
    <script src="~/Scripts/layout/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/layout/buttons.bootstrap4.min.js"></script>
    <script src="~/Scripts/layout/jszip.min.js"></script>
    <script src="~/Scripts/layout/pdfmake.min.js"></script>
    <script src="~/Scripts/layout/vfs_fonts.js"></script>
    <script src="~/Scripts/layout/buttons.html5.min.js"></script>
    <script src="~/Scripts/layout/buttons.print.min.js"></script>
    <script src="~/Scripts/layout/buttons.colVis.min.js"></script>


    <script src="~/Scripts/layout/Chart.min.js"></script>
    <script src="~/Scripts/layout/jquery.knob.min.js"></script>
    <script src="~/Scripts/layout/jquery.vmap.min.js"></script>
    <script src="~/Scripts/layout/jquery.vmap.usa.js"></script>
    <script src="~/Scripts/layout/sparkline.js"></script>
    <script src="~/Scripts/layout/moment.min.js"></script>
    <script src="~/Scripts/layout/daterangepicker.js"></script>
    <script src="~/Scripts/layout/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Scripts/layout/summernote-bs4.min.js"></script>
    <script src="~/Scripts/layout/jquery.overlayScrollbars.min.js"></script>
    <script src="~/Scripts/layout/adminlte.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
